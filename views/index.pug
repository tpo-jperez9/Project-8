extends layout

block content
  h1 Books
  p
    a.button(href=`/books/new`) Create New Book
  table
    thead
      tr
        th Title
        th Author
        th Genre
        th Year
    tbody
      each book in books
        tr
          td.title 
            a(href=`/books/${book.id}`)= book.title
          td.sm #{book.author}
          td.sm #{book.genre}
          td.sm #{book.year} 